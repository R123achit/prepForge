# Environment Configuration
NODE_ENV=production
PORT=8000

# MongoDB Configuration (Required - Use MongoDB Atlas for production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/prepforge?retryWrites=true&w=majority

# JWT Configuration (Required - Change to a strong secret)
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRES_IN=7d

# AI Configuration
# OpenAI API key from: https://platform.openai.com/ (Requires billing/credits)
OPENAI_API_KEY=your_openai_api_key_here

# Frontend URL (Update with your deployed frontend URL)
FRONTEND_URL=https://your-frontend-url.vercel.app

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
